<h1 class="title">Listing Rooms</h1>

<%= if @live_action in [:new, :edit] do %>
  <%= live_modal @socket, NeosSocketWeb.RoomLive.FormComponent,
    id: @room.id || :new,
    title: @page_title,
    action: @live_action,
    room: @room,
    return_to: Routes.room_index_path(@socket, :index) %>
<% end %>

<table class="table is-striped  is-fullwidth">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody id="rooms">
    <%= for room <- @rooms do %>
      <tr id="room-<%= room.id %>">
        <td><%= room.name %></td>
        <td><%= room.description %></td>

        <td>
          <span><%= live_redirect "Show", to: Routes.room_show_path(@socket, :show, room) %></span>
          <span><%= live_patch "Edit", to: Routes.room_index_path(@socket, :edit, room) %></span>
          <span><%= link "Delete", to: "#", phx_click: "delete", phx_value_id: room.id, data: [confirm: "Are you sure?"] %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="button"><%= live_patch "New Room", to: Routes.room_index_path(@socket, :new) %></span>
